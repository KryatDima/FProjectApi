@model FProjectMVC.Models.BrandViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<div>
    @using (Html.BeginForm("UpdateBrandS", "Brand", FormMethod.Post))

    {
        @Html.HiddenFor(x => x.Id)
        @Html.TextBoxFor(x => x.Title, new { placeholder = "Title", @class = "form-control", required = "required" })
        @Html.TextBoxFor(x => x.Description, new { placeholder = "Description", @class = "form-control", required = "required" })
    
        <button type="submit">Save</button>
    }
</div>