@model FProjectMVC.Models.UpdateUserViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update user</h1>

<div>
    @using (Html.BeginForm("UpdateUser", "User", FormMethod.Post))

    {
        <div>@Html.HiddenFor(x=>x.Id)</div>
        <div>First Name: @Html.TextBoxFor(x => x.FirstName, new { placeholder = "FirstName", @class = "form-control", required = "required" })</div>
        <div>Last Name: @Html.TextBoxFor(x => x.LastName, new { placeholder = "LastName", @class = "form-control", required = "required" })</div>
        <div>Password: @Html.TextBoxFor(x => x.Password, new { placeholder = "Title", @class = "form-control", required = "required" })</div>
        <div>Phonenumber: @Html.TextBoxFor(x => x.PhoneNumber, new { placeholder = "Title", @class = "form-control", required = "required" })</div>
        <div>Date of birth: @Html.EditorFor(x => x.DateOfBirth, new { placeholder = "Title", @class = "form-control", required = "required" })</div>
        <div>E-mail: @Html.TextBoxFor(x => x.Email, new { placeholder = "Title", @class = "form-control", required = "required" })</div>
        <div>Delivery address: @Html.TextBoxFor(x => x.DeliveryAddress, new { placeholder = "Title", @class = "form-control", required = "required" })</div>

        <button type="submit">Save</button>
    }
</div>