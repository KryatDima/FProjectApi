@model FProjectMVC.Models.UpdateProductViewModel

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @using (Html.BeginForm("UpdateProductS", "Product", FormMethod.Post))

    {
        @Html.HiddenFor(x => x.Id)
        @Html.TextBoxFor(x => x.Title, new { placeholder = "Title", @class = "form-control" , required="required"})
        @Html.TextBoxFor(x => x.Price, new { placeholder = "Price", @class = "form-control" , required="required"})
        @Html.TextBoxFor(x => x.Quantity, new { placeholder = "Quantity", @class = "form-control" , required="required"})
        @Html.TextBoxFor(x => x.Description, new { placeholder = "Description", @class = "form-control" , required="required"})

        @Html.DropDownListFor(x => x.BrandId, Model.brands, new { @class = "form-control" , required="required"})
        @Html.DropDownListFor(x => x.CategoryId, Model.categories, new { @class = "form-control" , required="required"})

        <button type="submit">Save</button>
    }
</div>
