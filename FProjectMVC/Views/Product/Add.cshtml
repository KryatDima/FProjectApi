@model FProjectMVC.Models.CreateProductViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Product</h1>
<div>
    @using (Html.BeginForm("AddP", "Product", FormMethod.Post))

    {
        <div>Title: @Html.TextBoxFor(x => x.Title, new { placeholder = "Title", @class = "form-control" , required="required"})</div>
        <div>Price: @Html.TextBoxFor(x => x.Price, new { placeholder = "Price", @class = "form-control" , required="required"})</div>
        <div>Quantity: @Html.TextBoxFor(x => x.Quantity, new { placeholder = "Quantity", @class = "form-control" , required="required"})</div>
        <div>Description: @Html.TextBoxFor(x => x.Description, new { placeholder = "Description", @class = "form-control" , required="required"})</div>
        
        <div>Brand: @Html.DropDownListFor(x => x.BrandId, Model.brands, new { @class = "form-control" , required="required"})</div>
        <div>Category: @Html.DropDownListFor(x => x.CategoryId, Model.categories, new { @class = "form-control" , required="required"})</div>

        <button type="submit">Save</button>
    }
</div>

