@model FProjectMVC.Models.CreateBasketItemViewModel

@{
    ViewData["Title"] = "AddItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddItem</h1>


<div>
    <div>
        <p>
            @Model.product.Title
        </p>
        <p>
            Avaliable: @Model.product.Quantity
        </p>
    </div>
    @using (Html.BeginForm("AddItem", "Basket", FormMethod.Post))

    {
        <div>@Html.HiddenFor(x => x.ProductId)</div>
        <div>@Html.HiddenFor(x => x.BasketId)</div>
        <div>Quantity: @Html.TextBoxFor(x => x.Quantity, new { placeholder = "Quanity", @class = "form-control", required = "required" })</div>

        <button type="submit">Add</button>
    }
</div>